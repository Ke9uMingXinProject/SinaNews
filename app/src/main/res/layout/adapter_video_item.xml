<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/adapter_video_item_frameLayout"
        android:layout_height="wrap_content">
        <!--SurfaceView必须是match_parent！！！！-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#000" android:orientation="vertical" android:gravity="center_horizontal"
            android:layout_height="match_parent">
        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/adapter_video_item_video"/></LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_video_item_videoImg"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/adapter_video_item_videoProgressBar"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/adapter_video_item_videoPlayImg"
            android:src="@mipmap/ic_live_event_header_play_n"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/SinaNewsDefaultTitle"
            android:id="@+id/adapter_video_item_title"
            android:text="Title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/SinaNewsDefaultComment"
            android:id="@+id/adapter_video_item_comment"
            android:text="Comment"/>
    </RelativeLayout>
</LinearLayout>